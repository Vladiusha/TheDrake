<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="pane_main" prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lin.thedrake.GUI.GUIController">
    <children>
        <StackPane fx:id="pane_menu" stylesheets="@menuPane.css">
         <children>
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
               <children>
                     <VBox fx:id="start_menu" alignment="BOTTOM_LEFT" prefHeight="661.0" prefWidth="1200.0" spacing="30" stylesheets="@startMenu.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">
                         <children>
                             <Button fx:id="button_singleplayer" onAction="#clickSinglePlayer" prefHeight="70.0" prefWidth="400" text="Single game">
                           <VBox.margin>
                              <Insets bottom="10.0" left="50.0" right="50.0" top="10.0" />
                           </VBox.margin>
                           <font>
                              <Font name="Trattatello" size="36.0" />
                           </font>
                        </Button>
            
                             <Button fx:id="button_multiplayer" onAction="#clickMultiPlayer" prefHeight="70.0" prefWidth="400" text="Multi-player">
                           <VBox.margin>
                              <Insets bottom="10.0" left="50.0" right="50.0" top="10.0" />
                           </VBox.margin>
                           <font>
                              <Font name="Trattatello" size="36.0" />
                           </font>
                        </Button>
            
                             <Button fx:id="button_play_online" onAction="#clickPlayOnline" prefHeight="70.0" prefWidth="400.0" text="Online">
                           <VBox.margin>
                              <Insets bottom="10.0" left="50.0" right="50.0" top="10.0" />
                           </VBox.margin>
                           <font>
                              <Font name="Trattatello" size="36.0" />
                           </font>
                        </Button>
            
                             <Button fx:id="button_exit" prefHeight="70.0" prefWidth="400.0" text="EXIT">
                           <font>
                              <Font name="Trattatello" size="36.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="10.0" left="50.0" right="50.0" top="10.0" />
                           </VBox.margin>
                        </Button>
                         </children>
                         <padding>
                             <Insets bottom="100" />
                         </padding>
                     </VBox>
               </children>
            </AnchorPane>
         </children>
        </StackPane>
    </children>
</StackPane>
